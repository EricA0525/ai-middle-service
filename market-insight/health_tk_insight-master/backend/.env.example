# ===========================================
# Market Insight Agent - Environment Variables
# ===========================================
# 复制此文件为 .env 并填入实际值

# ========== 应用配置 ==========
APP_NAME=market-insight-agent
APP_ENV=development  # development | staging | production
DEBUG=true
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_FILE_PATH=logs/app.log

# ========== API 服务 ==========
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# ========== LLM 配置 ==========
# OpenAI 兼容格式的中转 API
LLM_BASE_URL=https://your-llm-proxy.com/v1
LLM_API_KEY=your-api-key-here
LLM_MODEL=gpt-4-turbo  # 或其他兼容模型

# ========== Tavily 搜索 API ==========
TAVILY_API_KEY=your-tavily-api-key
TAVILY_CACHE_ENABLED=true
TAVILY_CACHE_TTL_SECONDS=3600

# ========== 小红书 API（预留）==========
XIAOHONGSHU_API_URL=
XIAOHONGSHU_API_KEY=

# ========== 抖音 API（预留）==========
DOUYIN_API_URL=
DOUYIN_API_KEY=

# ========== Redis 配置（Celery 任务队列）==========
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_ENABLED=false

# ========== 数据库配置（可选）==========
DATABASE_URL=sqlite+aiosqlite:///./data/tasks.db
TASK_STORE_BACKEND=memory  # memory | sqlite

# ========== 任务配置 ==========
TASK_TIMEOUT_SECONDS=300  # 任务超时时间（秒）
TASK_RESULT_EXPIRE_SECONDS=3600  # 结果缓存时间（秒）
