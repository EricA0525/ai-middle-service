# ===========================================
# Market Insight Agent - Environment Variables
# ===========================================
# 配置文件用于在8100端口启动服务
# 使用方法：复制此文件为 .env
# cp .env.8100 .env

# ========== 应用配置 ==========
APP_NAME=market-insight-agent
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_FILE_PATH=logs/app.log

# ========== API 服务 ==========
# 关键配置：服务端口设置为8100
API_HOST=0.0.0.0
API_PORT=8100
API_PREFIX=/api/v1

# ========== LLM 配置 ==========
# OpenAI 兼容格式的中转 API
LLM_BASE_URL=https://api.openai.com/v1
LLM_API_KEY=your-api-key-here
LLM_MODEL=gpt-4-turbo

# ========== Tavily 搜索 API ==========
TAVILY_API_KEY=your-tavily-api-key
TAVILY_CACHE_ENABLED=true
TAVILY_CACHE_TTL_SECONDS=3600

# ========== 小红书 API（预留）==========
XIAOHONGSHU_API_URL=
XIAOHONGSHU_API_KEY=

# ========== 抖音 API（预留）==========
DOUYIN_API_URL=
DOUYIN_API_KEY=

# ========== Redis 配置（Celery 任务队列）==========
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_ENABLED=false

# ========== 数据库配置（可选）==========
DATABASE_URL=sqlite+aiosqlite:///./data/tasks.db
TASK_STORE_BACKEND=memory

# ========== 任务配置 ==========
TASK_TIMEOUT_SECONDS=300
TASK_RESULT_EXPIRE_SECONDS=3600
